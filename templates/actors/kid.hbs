<form class="actor-sheet {{cssClass}}" autocomplete="off">
    <header class="kid-header">
        <img src="systems/tftloop/img/tftl-logo.png" class="logo" title="tales from the loop logo">
    </header>

    <div class="flexrow">
        <div class="sidebar flexcol">
            <div class="name-box">
                <h1 class="charname">
                    <input name="name" type="text" value="{{actor.name}}" placeholder="name"/>
                </h1>

                <div class="portrait">
                    <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="160" width="160"/>
                </div>

                <div class="type">
                    <label>{{localize "tftloop.type"}}</label>
                    
                    <select name="type">
                        {{#select system.type}}
                        <option value="bookworm">{{localize "tftloop.bookworm"}}</option>
                        <option value="geek">{{localize "tftloop.geek"}}</option>
                        <option value="hick">{{localize "tftloop.hick"}}</option>
                        <option value="jock">{{localize "tftloop.jock"}}</option>
                        <option value="popular">{{localize "tftloop.popular"}}</option>
                        <option value="rocker">{{localize "tftloop.rocker"}}</option>
                        <option value="troublemaker">{{localize "tftloop.troublemaker"}}</option>
                        <option value="weirdo">{{localize "tftloop.weirdo"}}</option>
                        {{#if francein80s}}
                        <option value="combinard">{{localize "france.resourceful"}}</option>
                        <option value="frimeur">{{localize "france.showoff"}}</option>
                        <option value="inventeur">{{localize "france.inventor"}}</option>
                        <option value="roliste">{{localize "france.rolePlayer"}}</option>
                        {{/if}}
						{{#if polishedition}}
                        <option value="harcerka">{{localize "polish.scout"}}</option>
                        <option value="punk">{{localize "polish.punk"}}</option>
                        {{/if}}
                        {{/select}}
                    </select>
                </div>  
            </div>
            <div class="attributes-skills">
                <h4 class="section-header">{{localize "tftloop.attributesSkills"}}</h4>
                <ol class="attribute-list">
                    <li class="attribute flexrow body" >
                        <span class="add-to-pool" data-rolled="body">{{localize "tftloop.body"}}</span>
                        <input type="text" name="body" value="{{data.system.body}}" data-dtype="Number"/>
                    </li>
                    <li>
                        <ol class="skill-list">
                            <li class="skill flexrow sneak" >
                                <span class="add-to-pool" data-rolled="sneak">{{localize "tftloop.sneak"}}</span>
                                <input type="text" name="sneak" value="{{data.system.sneak}}" data-dtype="Number"/>
                            </li>
                            <li class="skill flexrow force">
                                <span class="add-to-pool" data-rolled="force">{{localize "tftloop.force"}}</span>
                                <input type="text" name="force" value="{{data.system.force}}" data-dtype="Number"/>
                            </li>
                            <li class="skill flexrow move">
                                <span class="add-to-pool" data-rolled="move">{{localize "tftloop.move"}}</span>
                                <input type="text" name="move" value="{{data.system.move}}" data-dtype="Number"/>
                            </li>
                        </ol>
                    </li>
                    <li class="attribute flexrow tech">
                        <span class="add-to-pool" data-rolled="tech">{{localize "tftloop.tech"}}</span>
                        <input type="text" name="tech" value="{{data.system.tech}}" data-dtype="Number"/>
                    </li>
                    <li>
                        <ol class="skill-list">
                            <li class="skill flexrow tinker">
                                <span class="add-to-pool" data-rolled="tinker">{{localize "tftloop.tinker"}}</span>
                                <input type="text" name="tinker" value="{{data.system.tinker}}" data-dtype="Number"/>
                            </li>
                            <li class="skill flexrow program">
                                <span class="add-to-pool" data-rolled="program">{{localize "tftloop.program"}}</span>
                                <input type="text" name="program" value="{{data.system.program}}" data-dtype="Number"/>
                            </li>
                            <li class="skill flexrow calculate">
                                <span class="add-to-pool" data-rolled="calculate">{{localize "tftloop.calculate"}}</span>
                                <input type="text" name="calculate" value="{{data.system.calculate}}" data-dtype="Number"/>
                            </li>
                        </ol>
                    </li>
                    <li class="attribute flexrow heart">
                        <span class="add-to-pool"data-rolled="heart">{{localize "tftloop.heart"}}</span>
                        <input type="text" name="heart" value="{{data.system.heart}}" data-dtype="Number"/>
                    </li>
                    <li>
                        <ol class="skill-list">
                            <li class="skill flexrow contact">
                                <span class="add-to-pool"data-rolled="contact">{{localize "tftloop.contact"}}</span>
                                <input type="text" name="contact" value="{{data.system.contact}}" data-dtype="Number"/>
                            </li>
                            <li class="skill flexrow charm">
                                <span class="add-to-pool" data-rolled="charm">{{localize "tftloop.charm"}}</span>
                                <input type="text" name="charm" value="{{data.system.charm}}" data-dtype="Number"/>
                            </li>
                            <li class="skill flexrow lead">
                                <span class="add-to-pool" data-rolled="lead">{{localize "tftloop.lead"}}</span>
                                <input type="text" name="lead" value="{{data.system.lead}}" data-dtype="Number"/>
                            </li>
                        </ol>
                    </li>
                    <li class="attribute flexrow mind">
                        <span class="add-to-pool" data-rolled="mind">{{localize "tftloop.mind"}}</span>
                        <input type="text" name="mind" value="{{data.system.mind}}" data-dtype="Number"/>
                    </li>
                    <li>
                        <ol class="skill-list">
                            <li class="skill flexrow investigate">
                                <span class="add-to-pool" data-rolled="investigate">{{localize "tftloop.investigate"}}</span>
                                <input type="text" name="investigate" value="{{data.system.investigate}}" data-dtype="Number"/>
                            </li>
                            <li class="skill flexrow comprehend">
                                <span class="add-to-pool" data-rolled="comprehend">{{localize "tftloop.comprehend"}}</span>
                                <input type="text" name="comprehend" value="{{data.system.comprehend}}" data-dtype="Number"/>
                            </li>
                            <li class="skill flexrow empathize">
                                <span class="add-to-pool" data-rolled="empathize">{{localize "tftloop.empathize"}}</span>
                                <input type="text" name="empathize" value="{{data.system.empathize}}" data-dtype="Number"/>
                            </li>
                        </ol>
                    </li>    
                </ol>
            </div>

            <div class="experience-group">
                <div class="section-header experience">
                    {{localize "tftloop.experience"}}
                </div>

                <div class="exp-boxes flexrow" title="{{localize "tftloop.addexp"}}">
                    {{#times 10}}
                    <div class="exp-box">
                        <div class="img-container">
                            {{#if (gte ../data.system.exp @index)}}
                            <img src="systems/tftloop/img/box_checked.png" height="18px" width="18px">
                            {{/if}}
                            {{#unless (gte ../data.system.exp @index)}}
                            <img src="systems/tftloop/img/box_not_checked.png" height="18px" width="18px">
                            {{/unless}}
                        </div>
                    </div>
                    {{/times}}
                </div>
            </div>
        </div>
        <div class="flexcol">
            <div class="sheet-tabs tabs flexrow" data-group="primary">
                <b class="item" data-tab="main">{{localize "tftloop.main"}}</b>
                <b class="item" data-tab="note">{{localize "tftloop.notes"}}</b>
            </div>
            <div class="sheet-body">
                <div class="tab" data-group="primary" data-tab="main">
                    <div class="main flexcol">
                        {{> "systems/tftloop/templates/actors/parts/core-info.hbs"}}
                        {{> "systems/tftloop/templates/actors/parts/conditions.hbs"}}
                        {{> "systems/tftloop/templates/actors/parts/relationships.hbs"}}
                        {{> "systems/tftloop/templates/actors/parts/item-hideout.hbs"}} 
                    </div>
                </div>
                <div class="tab" data-group="primary" data-tab="note">
                    <div class="notes-group info-group">
                        <h4 class="section-header">{{localize "tftloop.notes"}}</h4>
                        <div class="kid-notes">
                            {{editor content=system.notes.value target="notes.value" button=true owner=owner editable=true }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="sheet-footer">
        <img src="systems/tftloop/img/footer-image.png" class="logo" title="page footer image">
    </footer>
</form>
